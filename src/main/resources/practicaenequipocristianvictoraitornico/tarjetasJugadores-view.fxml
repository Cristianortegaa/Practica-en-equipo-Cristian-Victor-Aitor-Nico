<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/tarjetaJugador.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

        <!-- Imagen del jugador -->
        <ImageView fx:id="playerImage" fitHeight="180.0" fitWidth="150.0" layoutX="40.0" layoutY="40.0" preserveRatio="true" />

        <!-- Nombre -->
        <Label fx:id="playerName" layoutX="210.0" layoutY="40.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Nombre del Jugador" />

        <!-- Posición y dorsal -->
        <Label fx:id="playerPosition" layoutX="210.0" layoutY="75.0" style="-fx-font-size: 14px;" text="Posición · Dorsal" />

        <!-- Estadísticas -->
        <Label fx:id="playerStats" layoutX="210.0" layoutY="105.0" style="-fx-font-size: 14px;" text="Goles: 0 · Partidos: 0 · Minutos: 0" />

        <!-- Descripción o biografía -->
        <TextArea fx:id="playerDescription" editable="false" layoutX="40.0" layoutY="240.0" prefHeight="100.0" prefWidth="520.0" style="-fx-font-size: 13px;" wrapText="true">
            <text>
                Biografía o descripción detallada del jugador. Aquí puedes incluir logros, características especiales, historial, etc.
            </text>
        </TextArea>

        <!-- Botón volver -->
        <Button fx:id="btnVolver" layoutX="480.0" layoutY="360.0" prefWidth="80.0" text="Volver" />

    </AnchorPane>
